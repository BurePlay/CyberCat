\! chcp 1251 - починить русский
\c "название БД" - переключиться на нужную БД
\l - список таблиц
\d "имя таблицы"- перейти в таблицу
DROPP "имя таблицы\БД" - Удалить таблицу\БД
CREATE "имя таблицы\БД" - Создать таблицу\БД
SELECT * FROM "название таблицы" WHERE "некоторое условие" ;        Пример: SELECT * FROM client WHERE id = '1';
BIGSERIAL - возврастание цифр
VARCHAR("длинна") - символьный тип ограниченной длинны
